<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/guessnumber_history_linearlayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guessnumber_history_playerguess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1  2  3      "
            android:gravity="center_vertical"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/guessnumber_history_a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1 "
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_check_24" />

        <TextView
            android:id="@+id/guessnumber_history_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" 1 "
            android:gravity="center_vertical"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_ring_24" />

    </LinearLayout>


</LinearLayout>